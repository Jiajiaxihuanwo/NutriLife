                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dailygoal"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/caloriaDiaria"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
