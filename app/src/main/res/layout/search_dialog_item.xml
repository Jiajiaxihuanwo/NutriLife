<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/light_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="30dp"
        android:paddingStart="15dp"
        android:paddingVertical="15dp"
        >

        <!-- Nombre del alimento -->
        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Avocado Toast"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvCalories"
            app:layout_constraintHorizontal_bias="0"/>

        <!-- Calorías -->
        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350 kcal"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvFoodName"/>

        <!-- Descripción / cantidad -->
        <TextView
            android:id="@+id/tvFoodDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1 porcion"
            android:textSize="14sp"
            android:textColor="#888888"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFoodName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Etiquetas nutricionales -->
        <LinearLayout
            android:id="@+id/llMacros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFoodDesc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp">

            <!-- Proteínas -->
            <TextView
                android:id="@+id/tvProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P: 12g"
                android:textSize="12sp"
                android:textColor="#1E88E5"
                android:background="@drawable/macro_background"
                android:backgroundTint="@color/blueProteinDeshboard"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="4dp"/>

            <!-- Carbs -->
            <TextView
                android:id="@+id/tvCarbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C: 45g"
                android:textSize="12sp"
                android:textColor="#FBC02D"
                android:background="@drawable/macro_background"
                android:backgroundTint="@color/yellowCarbsDeshboard"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="4dp"/>

            <!-- Fats -->
            <TextView
                android:id="@+id/tvFats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F: 15g"
                android:textSize="12sp"
                android:textColor="#E53935"
                android:background="@drawable/macro_background"
                android:backgroundTint="@color/redFatsDeshboard"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>